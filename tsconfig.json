{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
